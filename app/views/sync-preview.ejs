<%- include header %>

<section>
    <div class="jumbo jumbo--full-screen">

        <div data-animate="animated fadeIn animatedsuperslow animateddelay2" class="background-image" style=" background-image:url(/img/bikes.jpeg);"></div>

        <div class="jumbo__overlay"></div>

        <div class="jumbo__content">

            <div class="container">

                <h1 class="headline margin-bottom--md">Manual synchronization</h1>

                <div class="row">
                    <div class="col-md-6 col-md-offset-3">

                        <div class="container-box text-xs-center">

                            <p>
                                The following activities will be synced (past 5 days):
                            </p>
                            
                            <div class="l-activities">
                              <table class="c-activities">
                                  <tr>
                                    <th>Date</th>
                                    <th>Distance</th>
                                    <th>Duration</th>
                                    <th />
                                  </tr>
                                  <% for (var date in activities) { %>
                                    <tr>
                                      <td><%=date%></td>
                                      <td><%=activities[date].distance%> km<br></td>
                                      <td><%=activities[date].hours%> h, <%=activities[date].minutes%> min</td>
                                      <% if (activities[date].isEBike) { %>
                                        <td>Electric</td>
                                      <% } else { %>
                                        <td />
                                      <% } %>
                                    </tr>
                                  <% } %>
                              </table>
                            </div>

                            <a href="/account" class="btn btn-secondary">Cancel</a>
                            <a href="/dosync" class="btn btn-primary">Sync</a>

                        </div>

                    </div>
                </div>
            </div>


        </div>

    </div><!-- end of jumbo -->
</section>


<%- include footer %>
